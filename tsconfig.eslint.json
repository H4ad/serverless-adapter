{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": [
      "vitest/globals"
    ],
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "vite.config.ts",
    "tsup.config.ts"
  ],
  "exclude": [
    "benchmark/**/*.ts"
  ]
}
