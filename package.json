{
  "name": "@h4ad/serverless-adapter",
  "version": "0.0.0-development",
  "description": "This library enables you to utilize AWS Lambda and Amazon API Gateway to respond to web and API requests using your existing Node.js application framework.",
  "main": "./lib/src/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "prepare": "husky install",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "coverage": "codecov",
    "lint": "eslint ./src/ ./test/  --fix",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/H4ad/serverless-adapter.git"
  },
  "license": "MIT",
  "author": {
    "name": "Vinícius Lourenço",
    "email": "H4ad@users.noreply.github.com",
    "url": "https://github.com/H4ad"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "aws",
    "serverless",
    "api gateway",
    "lambda",
    "express",
    "koa",
    "hapi",
    "sails",
    "node.js",
    "http"
  ],
  "bugs": {
    "url": "https://github.com/H4ad/serverless-adapter/issues"
  },
  "homepage": "https://github.com/H4ad/serverless-adapter#readme",
  "devDependencies": {
    "@hapi/hapi": ">= 16.8.3",
    "@types/aws-lambda": "^8.10.92",
    "@types/body-parser": "^1.19.2",
    "@types/express": ">= 4.15.4",
    "@types/hapi": ">=16.1.8",
    "@types/jest": "^27.4.0",
    "@types/koa": "^2.13.4",
    "@types/node": "12.20.43",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "body-parser": "^1.19.1",
    "codecov": "^3.8.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "ejs": "^3.1.6",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": ">= 4.15.4",
    "husky": "^6.0.0",
    "jest": "^27.4.7",
    "koa": ">=2.5.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "resolutions": {
    "ansi-regex": "5.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
