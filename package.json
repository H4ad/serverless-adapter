{
  "name": "@h4ad/serverless-adapter",
  "version": "0.0.0-development",
  "description": "This library enables you to utilize any Cloud or Event Source to respond to web and API requests using your existing Node.js application framework.",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "install:peers": "npx npm-install-peers",
    "prepare": "husky install",
    "build": "tsc -p tsconfig.build.json",
    "build:docs": "tsc -p tsconfig.doc.json",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "coverage": "codecov",
    "lint": "eslint ./src/ ./test/  --fix",
    "semantic-release": "semantic-release",
    "docs:generate:api-pages": "ts-node scripts/apidoc.ts",
    "docs:generate:api-pages-test": "ts-node scripts/apidoc-test.ts",
    "docs:generate:api-pages-test-1": "ts-node scripts/apidoc-test-1.ts",
    "docs:typedoc": "npm run build:docs && npm run docs:typedoc:extract:local && npm run docs:typedoc:extract && npm run docs:typedoc:markdown",
    "docs:typedoc:extract:local": "npx @microsoft/api-extractor run --local",
    "docs:typedoc:extract": "npx @microsoft/api-extractor run",
    "docs:typedoc:markdown": "npx @microsoft/api-documenter markdown --input-folder temp --output-folder docs/api",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/H4ad/serverless-adapter.git"
  },
  "license": "MIT",
  "author": {
    "name": "Vinícius Lourenço",
    "email": "H4ad@users.noreply.github.com",
    "url": "https://github.com/H4ad"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "aws",
    "serverless",
    "api gateway",
    "sqs",
    "sns",
    "lambda-edge",
    "alb",
    "lambda",
    "express",
    "koa",
    "hapi",
    "fastify",
    "node.js",
    "http"
  ],
  "bugs": {
    "url": "https://github.com/H4ad/serverless-adapter/issues"
  },
  "homepage": "https://github.com/H4ad/serverless-adapter#readme",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.17.0",
    "@microsoft/api-extractor": "^7.20.0",
    "@microsoft/api-extractor-model": "^7.16.0",
    "@microsoft/tsdoc": "^0.13.2",
    "@types/aws-lambda": "^8.10.92",
    "@types/body-parser": "^1.19.2",
    "@types/jest": "^27.4.0",
    "@types/node": "12.20.43",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "body-parser": "^1.19.1",
    "codecov": "^3.8.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "ejs": "^3.1.6",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^6.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "stream-mock": "^2.0.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.13",
    "typescript": "^4.5.5",
    "vitepress": "^0.22.3"
  },
  "peerDependencies": {
    "@hapi/hapi": ">= 20.0.0",
    "@types/express": ">= 4.15.4",
    "@types/hapi": ">= 18.0.7",
    "@types/koa": ">= 2.11.2",
    "express": ">= 4.15.4",
    "fastify": ">= 3.0.0",
    "koa": ">= 2.5.1"
  },
  "peerDependenciesMeta": {
    "@hapi/hapi": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "koa": {
      "optional": true
    },
    "@types/express": {
      "optional": true
    },
    "@types/hapi": {
      "optional": true
    },
    "@types/koa": {
      "optional": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
